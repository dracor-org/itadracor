<castItem><role rend="sc">L'Arcangelo Michael</role></castItem>
<castItem><role rend="sc">Adamo</role></castItem>
<castItem><role rend="sc">Eva</role></castItem>
<castItem><role rend="sc">Il Serpente</role></castItem>
<castItem><role rend="sc">L'Angelo Serafino</role> <roleDesc>con la spada</roleDesc></castItem>
<castItem><role rend="sc">Caino</role></castItem>
<castItem><role rend="sc">Abello</role></castItem>
<castItem><role rend="sc">L'Angelo</role> <roleDesc>che piglia l'anima di Abello</roleDesc></castItem>
<castItem><role rend="sc">Il Fanciullo</role></castItem>
<castItem><role rend="sc">Lamech</role></castItem>
<castItem><role rend="sc">Il Dimonio</role> <roleDesc>che viene per l'anima di Caino</roleDesc></castItem>
<castItem><role rend="sc">L'Angelo</role> <roleDesc>che gliela contraddice</roleDesc></castItem>
</castList>
