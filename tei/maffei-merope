<front>
<castList>
<head>PERSONAGGI</head>
<castItem type="role">
<role>POLIFONTE</role></castItem>
<castItem type="role"><role>MEROPE</role></castItem>
<castItem type="role"><role>EGISTO</role></castItem>
<castItem type="role"><role>ADRASTO</role></castItem>
<castItem type="role"><role>EURISO</role></castItem>
